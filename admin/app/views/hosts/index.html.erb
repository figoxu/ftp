<p id="notice"><%= notice %></p>

<h4>Ftp服务主机器列表</h4>

<%= link_to '增加服务器', new_host_path ,:class => 'btn btn-info btn-xs active'%>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>监听IP</th>
      <th>服务IP</th>
      <th>服务端口</th>
      <th>被动端口开始</th>
      <th>被动端口结束</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @hosts.each do |host| %>
      <tr>
        <td><%= host.ip_listen %></td>
        <td><%= host.ip_serv %></td>
        <td><%= host.port %></td>
        <td><%= host.port_passive_begin %></td>
        <td><%= host.port_passive_end %></td>
        <td><%= link_to '查看', host ,:class => 'btn btn-info btn-xs active'%></td>
        <td><%= link_to '编辑', edit_host_path(host) ,:class => 'btn btn-primary btn-xs active'%></td>
        <td><%= link_to '删除', host, method: :delete, data: { confirm: '确定要删除?' },:class => 'btn btn-danger btn-xs active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

